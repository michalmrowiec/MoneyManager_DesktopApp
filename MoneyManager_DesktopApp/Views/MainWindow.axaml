    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.15*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="Beige">
            <Button Name="LoginWindow" Content="Login" Command="{Binding OpenLoginWindow}"></Button>
            <Button Name="AddWindow" Content="Add" Command="{Binding OpenAddWindow}"></Button>
            <Button Content="Start" Command="{Binding OpenStartTabView}"></Button>
            <Button Content="Dashboard" Command="{Binding OpenDashboardView}"></Button>
            <!-- <Button Content="Grafik planowany" Command="{Binding OpenView2}"></Button> -->
        </StackPanel>
        <ContentControl Name="MainView" Content="{Binding MainViewContent}" Grid.Column="1"></ContentControl>
    </Grid>

</Window>
